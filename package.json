{
  "name": "@gpt5/mcp-server",
  "version": "1.0.0",
  "description": "MCP server for GPT-5 integration with Claude Code",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "gpt5-mcp": "dist/index.js"
  },
  "scripts": {
    "start": "./start.sh",
    "start:local": "./start.sh",
    "install:setup": "./install.sh",
    "build": "tsc && chmod +x dist/*.js",
    "dev": "tsx watch src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t gpt5-mcp .",
    "docker:run": "docker run --rm -i --env-file .env gpt5-mcp",
    "prepare": "pnpm run build"
  },
  "keywords": [
    "mcp",
    "gpt5",
    "openai",
    "claude",
    "ai",
    "llm"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "openai": "^4.56.0",
    "dotenv": "^16.4.5",
    "zod": "^3.23.8",
    "winston": "^3.14.2",
    "zod-to-json-schema": "^3.23.2"
  },
  "devDependencies": {
    "@types/node": "^22.5.0",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.4",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.12.4+sha512.5ea8b0deed94ed68691c9bad4c955492705c5eeb8a87ef86bc62c74a26b037b08ff9570f108b2e4dbd1dd1a9186fea925e527f141c648e85af45631074680184"
}
